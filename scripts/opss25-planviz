#!/usr/bin/env bash
set -e  # exit on error

DIR="$HOME/opss25/packages/PlanViz/external/PlanViz"
ENV_NAME="opss25"

if [[ "$CONDA_DEFAULT_ENV" != "$ENV_NAME" ]]; then
        echo "‚ùå You must be in the $ENV_NAME conda environment. Please activate it first by running 'conda deactivate $ENV_NAME'. Aborting."
        exit 1
fi

python "$DIR/script/run.py" "$@"